{
  "name": "maya-crm-backend",
  "version": "1.0.0",
  "description": "Backend do Maya CRM",
  "main": "src/api/server.js",
  "scripts": {
    "start": "node src/api/server.js",
    "dev": "nodemon src/api/server.js",
    "bot": "node src/baileys-bot.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run bot\"",
    "setup-db": "node src/database/setup.js",
    "db:create-tables": "node src/database/runSql.js create_tables_clean.sql",
    "db:seed": "node src/database/runSql.js insert_initial_data.sql",
    "db:test-data": "node src/database/createTestData.js",
    "db:setup-complete": "npm run db:create-tables && npm run db:seed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "crm",
    "whatsapp",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "openai": "^4.104.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pino": "^9.7.0",
    "qrcode-terminal": "^0.12.0",
    "sequelize": "^6.35.2",
    "socket.io": "^4.6.1",
    "whatsapp-web.js": "^1.23.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.0.2"
  }
}
